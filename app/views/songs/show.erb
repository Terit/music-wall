<div class="container">
  <div class="row">
  <h2><%= @song.title %> <small> Artist: <%= @song.author %></small></h2>
  </div>
  <div class="row">

    <a href="<%= @song.url %>" target="_blank">Play Song</a>

  </div>

  <div class ="row">
    <p>Reviews <span class="badge"><%= @song.reviews.count %></span></p>
      <!-- <p>Reviews</p> -->
        <% Review.all.each do |review| %>
          <%= review.inspect %>
        <% end %>
  </div>
</div>
