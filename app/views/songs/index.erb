<h1>All Musics</h1>

<% if @songs %>

  <% @songs.each do |song| %>
    <div class="song">
      <a href="songs/<%= song.id %>">
      <h3><%= song.title %> <small>(by: <%= song.author %>)</small></h3>
  </a>
    </div>
  <% end %>

<% end %>

<div>
<a href="/songs/new"><h2>Post your own song</h2></a>
</div>